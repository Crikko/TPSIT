            <script>
                let contatore=0;
               function contaclick() {
                   contatore++;
                   document .getElementById("mioFont1").innerHTML=contatore.toString();
               }
               function contaclick1() {
                   contatore--;
                   document .getElementById("mioFont1").innerHTML=contatore.toString();
               }
               function contaclick2() {
                   contatore2--;
                   document .getElementById("mioFont2").innerHTML=contatore2.toString();
               }
                let contatore2=0;
               function contaclick3() {
                   contatore2++;
